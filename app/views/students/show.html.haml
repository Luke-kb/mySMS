%h3= "#{@student.full_name}"

%table.table.table-striped
    %tbody
        %tr
            %th Title
            %th First Name
            %th Middle Name
            %th Surname
            %th Email
            %th DOB (YYYY-MM-DD)
            %th Gender
            %th
            %th

        %tr
            %td= @student.title.name
            %td= @student.first_name
            %td= @student.middle_name
            %td= @student.last_name
            %td= @student.email
            %td= @student.birth_date
            %td= @student.gender
            %td= link_to "Edit", edit_student_path(@student)
            %td= link_to "Delete", @student, method: :delete, data: { confirm: 'Are you sure?' }

= link_to "Back", students_path, class: 'btn btn-info'

= form_for @student do |f|
  = f.label :title, "Title"
  %br/
  = f.select_tag :title, options_from_collection_for_select(Title.all, :id, :name )
  %br/
  = f.label :first_name, "First Name"
  %br/
  = f.text_field :first_name
  %br/
  = f.label :middle_name, "Middle Name"
  %br/
  = f.text_field :middle_name
  %br/
  = f.label :last_name, "Surname"
  %br/
  = f.text_field :last_name
  %br/
  = f.label :email, "Email"
  %br/
  = f.email_field :email
  %br/
  = f.label :birth_date, "Date of Birth"
  %br/
  = f.date_select :birth_date
  %br/
  = f.label :gender, "Gender"
  %br/
  = f.select_tag :gender, options_for_select(["Male", "Female", "Non-Binary"])
  %br/
  %br/
  = f.submit "Update student details", class: 'btn btn-success'
%br/
= link_to 'Back', students_path, class: 'btn btn-info'
